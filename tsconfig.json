{
  "compilerOptions": {
    "esModuleInterop": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": "./src",
    "lib": ["esnext"],
    "paths": {
      "@/*": ["./*"],
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
